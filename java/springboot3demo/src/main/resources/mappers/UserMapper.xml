    <select id="GetUserByID" parameterType="int" resultType="User" fetchSize="5000">
        select * from `user1` where id = #{id}
    </select>

    <select id="findAll"  resultType="User" fetchSize="5000">
        select * from `sys_user`
    </select>

    <insert id="addUser">
        insert into `user1`(name,dept) value (#{name},#{dept} )
    </insert>

    <update id="updateUser">
        update `user1` set dept=#{dept} where id=#{id} )
    </update>
</mapper>